<?xml version="1.0" encoding="UTF-8"?>
<server description="Sample Liberty server">
    <featureManager>
        <feature>restConnector-1.0</feature>
        <feature>appSecurity-2.0</feature>
        <feature>jsp-2.3</feature>
        <feature>jndi-1.0</feature>
        <feature>jaxrs-1.1</feature>
        <feature>el-3.0</feature>
        <feature>distributedMap-1.0</feature>
        <feature>servlet-3.1</feature>
    </featureManager>

    <applicationManager autoExpand="true"/>

    <webApplication contextRoot="/" location="jenkins.war" />

    <httpEndpoint id="defaultHttpEndpoint" host="*" httpPort="9080" httpsPort="9443" />

    <keyStore id="defaultKeyStore" location="key.jks" type="JKS" password="defaultPWD" />
    <keyStore id="defaultTrustStore" location="trust.jks" type="JKS" password="defaultPWD" />

    <sslDefault sslRef="defaultSSLSettings" />
    <ssl id="defaultSSLSettings" keyStoreRef="defaultKeyStore" trustStoreRef="defaultTrustStore" clientAuthenticationSupported="true" />

</server>


